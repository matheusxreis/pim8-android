<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InputStyle"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_height">60dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxStrokeColor">@color/black60</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black60</item>
        <item name="counterTextColor">@color/gray</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="InputStyle.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/black60</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
 </resources>